#!/bin/sh

CLASSPATH=lib/*
export CLASSPATH

if [ ${http_proxy} ]; then
  PROXY=`echo -n -e ${http_proxy} | sed -n 's/http:\/\/\([^:]\+\):\([1234567890]\+\)/-DproxySet=true -DproxyHost=\1 -DproxyPort=\2/p'`
  java -Xms1024m -Xmx2048m $PROXY replicatorg.app.Base "$@"
else
  java -Xms1024m -Xmx2048m replicatorg.app.Base "$@"
fi
